<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>

        <parameter key="run_open_code.query_resources_loader.loader.filesystem_loader.class">RunOpenCode\Bundle\QueryResourcesLoader\Loader\FilesystemLoader</parameter>

        <parameter key="run_open_code.query_resources_loader.loader.chained_loader.class">RunOpenCode\Bundle\QueryResourcesLoader\Loader\ChainedLoader</parameter>

        <parameter key="run_open_code.query_resources_loader.loader.cached_loader.class">RunOpenCode\Bundle\QueryResourcesLoader\Loader\CachedLoader</parameter>

        <parameter key="run_open_code.query_resources_loader.manager.static.class">RunOpenCode\Bundle\QueryResourcesLoader\Manager\StaticSourceManager</parameter>

    </parameters>

    <services>

        <service
                id="run_open_code.query_resources_loader.loader.filesystem_loader"
                class="%run_open_code.query_resources_loader.loader.filesystem_loader.class%"
                public="false"
        >
            <tag name="run_open_code.query_resources_loader.loader" priority="0" />
        </service>

        <service
                id="run_open_code.query_resources_loader.loader.chained_loader"
                class="%run_open_code.query_resources_loader.loader.chained_loader.class%"
                public="false"
        >

        </service>

        <service
                id="run_open_code.query_resources_loader.loader.cached_loader"
                class="%run_open_code.query_resources_loader.loader.cached_loader.class%"
                public="false"
        >

        </service>

        <service
                id="run_open_code.query_resources_loader.manager.static"
                class="%run_open_code.query_resources_loader.manager.static.class%"
                public="false"
        >
            <argument type="service" id="run_open_code.query_resources_loader.loader" />
        </service>

    </services>

</container>
